@page "/cidade/adicionar"
@inherits CriarCidadePage

<MudText Typo="Typo.h3">Cadastrar nova cidade</MudText>
<MudPaper Class="pa-8 mt-4">
    <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
        <DataAnnotationsValidator />

        <MudTextField Label="Nome"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.Nome"
                      For="@(() => InputModel.Nome)" />

        <MudSelect T="long"
                   Label="Unidade federativa"
                   @bind-Value="InputModel.UnidadeFederativaId"
                   Required="true"
                   For="@(() => InputModel.UnidadeFederativaId)"
                   AnchorOrigin="Origin.BottomCenter">
            @foreach (var uniFed in UnidadesFederativas)
            {
                <MudSelectItem T="long" Value="@uniFed.Id">@uniFed.Nome</MudSelectItem>
            }
        </MudSelect>

        <MudButton ButtonType="ButtonType.Submit"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Class="mt-4">Salvar</MudButton>
    </EditForm>
</MudPaper>