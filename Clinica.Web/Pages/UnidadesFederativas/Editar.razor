@page "/unidadefederativa/editar/{id}"
@inherits EditarUnidadeFederativaPage

<MudText Typo="Typo.h3">Editar unidade federativa</MudText>

@if (IsBusy)
{
    <MudPaper Class="pa-8 mt-4">
        <MudProgressCircular Indeterminate="true"
                             Color="Color.Info" />
    </MudPaper>
}
else
{
    <MudPaper Class="pa-8 mt-4">
        <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
            <DataAnnotationsValidator />

            <MudTextField Label="Nome"
                          HelperText="Campo obrigatório"
                          @bind-Value="InputModel.Nome"
                          For="@(() => InputModel.Nome)" />

            <MudTextField Label="Sigla"
                          HelperText="Campo obrigatório"
                          @bind-Value="InputModel.Sigla"
                          For="@(() => InputModel.Sigla)" />



            <div class="d-flex mt-8">
                @if (IsBusy)
                {
                    <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                }
                else
                {
                    <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary">
                        Salvar
                    </MudButton>
                }
            </div>
        </EditForm>
    </MudPaper>
}