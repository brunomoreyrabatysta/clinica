@page "/unidadefederativa/adicionar"
@inherits CriarUnidadeFederativaPage

<MudText Typo="Typo.h3">Cadastrar nova unidade federativa</MudText>
<MudPaper Class="pa-8 mt-4">
    <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
        <DataAnnotationsValidator />

        <MudTextField Label="Nome"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.Nome"
                      For="@(() => InputModel.Nome)" />

        <MudTextField Label="Sigla"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.Sigla"
                      For="@(() => InputModel.Sigla)" />


        <MudButton ButtonType="ButtonType.Submit"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Class="mt-4">Salvar</MudButton>
    </EditForm>
</MudPaper>